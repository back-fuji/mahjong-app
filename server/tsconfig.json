{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "..",
    "types": ["node"],
    "verbatimModuleSyntax": false
  },
  "include": ["./**/*.ts", "../src/core/**/*.ts", "../src/ai/**/*.ts"]
}
